<div class="row no-gutters">
  <h1>マイページ</h1>
  <div class="col-xs-10" style="margin-top: 50px;">
    <h3>登録情報    <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %></h3>
    <div class='col'>
      <table class="table table-bordered">
        <thead>
          <tr class="table">
            <th style="background-color:#f0f8ff;">氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
  
          <tr class="table">
            <th style="background-color:#f0f8ff;">カナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
  
          <tr class="table">
            <th style="background-color:#f0f8ff;">郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
  
          <tr class="table">
            <th style="background-color:#f0f8ff;">住所</th>
            <td><%= @customer.address %></td>
          </tr>
  
          <tr class="table">
            <th style="background-color:#f0f8ff;">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
  
          <tr class="table">
            <th style="background-color:#f0f8ff;">メールアドレス</th>
            <td><%= @customer.email%></td>
          </tr>
        <thead>
      </table>
      <table>
        <th>配送先　　</th>
        <th><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></th>
      </table>
      <table>
        <th>注文履歴　</th>
        <th><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></th>
      </table>
    </div>
  </div>
</div>
