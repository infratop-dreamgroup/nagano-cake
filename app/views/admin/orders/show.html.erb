<div class="container">
	<div class="row">

 <h5 class=" col-sm-2 col-lg-2.5 m-5 text-center", style="background-color:#e0e0e0">
  注文履歴詳細
 </h5>

<div class="container-fluid">
  <table>
   <tr>
    <th>購入者</th>
    <td><%= link_to admin_customer_path(@order) do %>
        <%= @order.customer.last_name %><%= @order.customer.first_name %>
        <% end %>
    </td>
   </tr>

   <tr>
   <th>注文日</th>
   <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
   </td>
   </tr>

  <tr>
   <th>配送先</th>
   <td><p><%= @order.post_code %><%= @order.address %></p>
      <p><%= @order.name %></p>
  </td>
  </tr>

  <tr>
   <th>支払方法</th>
   <td><%= @order.pay_type_i18n %></td>
  </tr>

  <tr>
   <th>注文ステータス</th>
   <td>
    <%= form_with model:@order, url: admin_order_path, local: true do |f| %>
    <%= f.select :order_status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"] %>
    <%= f.submit "更新", class: "btn btn-success" %>
    <% end %>
   </td>
  </tr>
  </table>
</div>

<div class="w-75 m-5">
    <table class="table" ,style="align-left">
      <thead class="thead-light">
        <tr>
          <th scope="col" style="width: 30%">商品名</th>
          <th scope="col" style="width: 20%">単価（税込）</th>
          <th class="active">数量</th>
          <th class="active">小計</th>
          <th class="active">製作ステータス</th>
        <tr>
      </thead>
    <% @order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td class="col-xs-4"><%= order_detail.item.name%></td>
          <td class="col-xs-2">¥ <%= (order_detail.item.price*1.1).floor.to_s(:delimited) %></td>
          <td><%= order_detail.quantity %></td>
          <td class="col-xs-2">¥
           <%= ((order_detail.item.price * order_detail.quantity*1.1).floor).to_s(:delimited) %></td>
          <td>
            <%= form_with model:order_detail, url: admin_order_detail_path(order_detail), local: true do |f| %>
              <%= f.select :production_status, ["着手不可", "製作待ち", "製作中", "製作完了"] %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>

     <div class="mt-5">
       <table>
        <tr>
          <th>商品合計</th>
          <td><%= (@order.billing_amount - @order.postage).to_s(:delimited)%>円</td>
        </tr>
        <tr>
         <th>送料</th>
         <td><span class: "justify-content-end"><% @order.postage = 800 %>
         <%= @order.postage %>円</td>
        </tr>
         <tr>
           <th>請求金額合</th>
           <td><%= @order.billing_amount %>円</td>
         </tr>
        </table>
    </div>
  </div>