<div class="container yl-5">
  <div class="row">
  <h2>新規会員登録</h2>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <table class="col-lg-12 my-5"><br>
      <tbody>
        <tr>
          <th><%= f.label "名前" %></th>
          <th><%= f.label "(姓)　" %><%= f.text_field :last_name, placeholder: "令和" %><%= f.label "(名)　" %><%= f.text_field :first_name, placeholder: "道子" %></th>
        </tr>
        <tr>
          <th><%= f.label "フリガナ" %></th>
          <th><%= f.label "(セイ)" %><%= f.text_field :last_name_kana, placeholder: "レイワ" %><%= f.label "(メイ)" %><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></th>
        </tr>
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <th>　　　<%= f.email_field :email, autocomplete: "email", placeholder: "example@example.com" %></th>
        </tr>
        <tr>
          <th><%= f.label "郵便番号(ハイフンなし)" %></th>
          <th>　　　<%= f.text_field :post_code, placeholder: "0000000", maxlength: 7 %></th>
        </tr>
        <tr>
          <th><%= f.label "住所" %></th>
          <th>　　　<%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: "60" %></th>
        </tr>
        <tr>
          <th><%= f.label "電話番号(ハイフンなし)" %></th>
          <th>　　　<%= f.text_field :phone_number, placeholder: "00000000000", maxlength: 11 %></th>
        </tr>
        <tr>
          <th><%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)</th>
          <% end %>
          <th>　　　<%= f.password_field :password, autocomplete: "new-password" %></th>
        </tr>

          <th><%= f.label "パスワード(確認用)" %></th>
          <th>　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
        </tr>
        <tr>
          <th></th>
          <th>　　　<%= f.submit "新規登録", class: "btn btn-success" %></th>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
  <%= render "public/shared/links" %>
</div>