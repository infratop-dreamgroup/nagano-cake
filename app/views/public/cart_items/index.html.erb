<div class="container mt-5">
  <div class="row">
    <div class="col-10">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-2">
      <!--%= button_to "ボタン", {controller: 'mypages', action: 'index'}, {method: :get} %-->
      <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, data: {confirm: '本当にカートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered cart-table">
      <thead>
        <tr>
          <th class="col-4">商品名</th>
          <th class="col-2 text-center">単価（税込)</th>
          <th class="col-2 text-center">数量</th>
          <th class="col-2 text-center">小計</th>
          <th class="col-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td class="text-center"><%= (cart_item.item.price * 1.1).floor.to_s(:delimited) %></td>


            <td class="text-center">
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %><!--数量変更-->
              <%= f.select :quantity, *[1..10] %>
              <%= f.submit "変更" %>
              <% end %>
            </td>

          <td class="text-center"><%= (cart_item.item.price*cart_item.quantity).to_s(:delimited) %></td>
          <td class="text-center"><%= link_to "削除する",  cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-8"></div>
    <div class="col-4">
      <table class="table table-bordered cart-table">
        <tr>
          <td>合計金額</td>
          <td><%= @total%></td><!--.round.to_s(:delimited)-->
        </tr>
      </table>
    </div>
  </div>

<div class="row">
  <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
</div>

<div class="row mt-5 mx-auto">
  <% if @cart_items.count == 0  %><!--商品０なら進まない-->
    <%= link_to "情報入力に進む", cart_items_path, class: "btn btn-success go-to-order" %>
  <% else %>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success go-to-order" %>
  <% end %>
</div>



</div>