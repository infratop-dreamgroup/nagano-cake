<div class="container">
	<div class="row">

<h5 class="h-25 col-lg-2.5 mt-5 ml-5 mb-lg-5", style="background-color:#e0e0e0">
  ジャンル一覧・追加</h>

<div class="container">
  <div class="row">
<div class="ml-5 w-25"><b>ジャンル名</b> <%= form_with model: @genre , url: '/admin/genres', method: :post do |f| %></div>
<%= f.text_field :name , placeholder:"ジャンル名" %>
<%= f.submit '新規登録' , class: 'ml-5 btn btn-success w-20' %>
<% end %></div>
</div></div>

<div class="col-md-5 offset-md-0 mt-4">
<table class='table table-hover table-inverse'>
  <thead style="background-color:#e0e0e0">
  <tr>
    <th>ジャンル</th>
  <th></th></tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td><td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: 'btn btn-success w-20'%></td>
  </tr>
  <% end %>
  </tbody>
　</table>

</div>
</div>
</div>