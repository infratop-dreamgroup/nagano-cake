<div class="container my-5">
  <div class="row no-gutters">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員一覧</h2>
      <%= search_form_for @q, url: search_admin_customers_path do |f| %>
        <%= f.label :last_name_cont, '姓）で検索' %>
        <%= f.search_field :last_name_cont %>
        <%= f.label :first_name_cont, '名）で検索' %>
        <%= f.search_field :first_name_cont %><br>
        <%= f.label :last_name_kana_cont, 'ｾｲ）で検索' %>
        <%= f.search_field :last_name_kana_cont %>
        <%= f.label :first_name_kana_cont, 'ﾒｲ）で検索' %>
        <%= f.search_field :first_name_kana_cont %>
        <%= f.submit '検索' %>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.is_deleted ? '退会' : '有効' %></td>
            </tr>
            <% end %>
            <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>
