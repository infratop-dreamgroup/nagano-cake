<div class="container my-5">
  <div class="row no-gutters">
    <div class="col-xs-10 col-xs-offset-1">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報詳細</h2>
        <table class="row table no-gutters">
  
          <tr>
            <th class="col-xs-2">顧客ID</th>
            <td class="col-xs-10"><%= @customer.id %></td>
          </tr>
  
          <tr>
            <th>氏名</th>
            <td><%= @customer.full_name %></td>
          </tr>
  
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.full_name_kana %></td>
          </tr>
  
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
  
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
  
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
  
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
  
      <div class="row no-gutters">
        <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>　
        <%= link_to "注文履歴一覧を見る(仮)", admin_root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>