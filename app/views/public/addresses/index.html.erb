<div class="container">
 <div class="row">

　<h5 class=" col-sm-2 col-lg-2.5 m-5 text-center", style="background-color:#e0e0e0">
  配送先登録 / 一覧</h5>

<div class="container">
 <div class="row">
  <table class="table table-borderless " >
	     <%= form_with model: @address , url: '/addresses', method: :post do |f| %>
		<tr>
			<th scope="col" style="width: 20%">郵便番号(ハイフンなし)</th>
			<td><%= f.text_field :post_code , placeholder:"郵便番号" %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= f.text_field :address , placeholder:"東京都渋谷区代々木神園町0-0" , size: 50 %></td>
		</tr>
		<tr>
			<th>宛名</th>
			<td><%= f.text_field :name , placeholder:"令和道子" %>
　　　　　<%= f.submit '新規登録' , class: 'ml-5 btn btn-success w-20' %></td>
		</tr>
　　　　　<%end%>
　　</table>
　　</div>
   </div>
   
   <table class="table table-bordered w-75">
   <thead style="background-color:#e0e0e0">
    <tr>
      <th scope="col" style="width: 15%">郵便番号</th>
      <th scope="col" style="width: 30%">住所</th>
      <th scope="col" style="width: 15%">宛名</th>
　　  <th scope="col" style="width: 30%"></th>
    </tr>
  </thead>
  	 <tbody>
  	 	<% @addresses.each do |address| %>
  <tr>
      <td><%= address.post_code %> </td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) ,class: 'btn btn-success w-20'%>
      <%= link_to "削除する", address_path(address),  class: "btn btn-danger", method: :delete %>
      </td>
    </tr>
  <%end%>
  </tbody>

</table>
   
　</div>
</div>