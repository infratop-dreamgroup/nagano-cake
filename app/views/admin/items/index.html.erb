<div class="container">
  <div class="row my-4">
    <div class="col-11">
    <h2>商品一覧</h2>
    </div>
    <div class="col-1">
    <%= link_to "+",new_admin_item_path,class: "btn btn-outline-secondary mt-2" %><!--商品新規登録ページへのボタン-->
    </div>
  </div>

  <div class="row">
    <table class='table'>
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル </th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody class="table-borderless">
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.floor.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
                販売中
              <% else %>
                販売停止中
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>