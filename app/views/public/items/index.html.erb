<div class="container pt-5">
  <div class="row">
    <div class="col-4">
      <table>
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
            
        </tbody>
      </table>


      
    </div>
    
    <div class="col-8">
      <h2>商品一覧</h2><span>全<%= @items.count %>件</span>
        <% @items.each do |item| %>
          <table>
            <tr>
              <td>
                <%= link_to item_path(item) do %>
                  <%= image_tag item.image, size: "250x200" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= item.name %>
              </td>
            </tr>
            <tr>
              <td>
                ￥<%= (item.price*1.1).floor.to_s(:delimited) %>
              </td>
            </tr>

          </table>
        <% end %>



    </div>
  </div>
</div>