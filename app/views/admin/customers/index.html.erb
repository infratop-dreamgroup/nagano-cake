<div class="container my-5">
  <div class="row no-gutters">
    <div class="col-lg-12 col-xs-offset-1">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td class="text-dark">
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.full_name %>
              <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.is_deleted ? '退会' : '有効' %></td>
            </tr>
            <% end %>
            <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>
