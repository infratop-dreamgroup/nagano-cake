<div class="container">
  <h1 class="mx-auto">商品新規登録</h1>

  <div class="row justify-content-center">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label "商品画像"%>
      <%= f.file_field :image, accept: "image/*",class:"ml-4" %>
    </div>

    <div class="form-group">
      <%= f.label "商 品 名" %>
      <%= f.text_field :name,class:"ml-4" %>
    </div>

    <div class="form-group">
      <%= f.label "商品説明" %>
      <%= f.text_area :introduction,class:"ml-4" %>
    </div>

    <div class="form-group">
      <%= f.label "ジャンル" %>
      <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"},class:"ml-4" %>
    </div>

    <div class="form-group">
      <%= f.label "税抜価格" %>
      <%= f.text_field :price, placeholder: "1000",class:"ml-4"%>円
    </div>

    <div class="form-group">
      <%= f.label "販売ステータス" %>
      <%= f.radio_button :is_active, true,class:"ml-4" %>販売中
      <%= f.radio_button :is_active, false,class:"ml-4" %>販売停止中
    </div>

    <div class="form-group text-center">
      <%= f.submit "新規登録",class:"btn btn-success "%>
    </div>
      <% end %>
  </div>
</div>