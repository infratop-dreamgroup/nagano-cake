<div class="container">
  <div class='row mb-3'>
     <div class='col-8 offset-1'>
       <h4 class="pt-3">注文情報確認</h4>
     </div>
    </div>
	<div class="row">
		 <div class='col-7 offset-1'>
			<p>注文情報</p>
			<table align="left" class="table table-bordered">
				<tr>
					<td class="table-secondary">注文日</td>
					<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
				</tr>
				<tr>
					<td class="table-secondary">配送先</td>
					<td>〒<%= @order.post_code %><br><%= @order.address %><br><%= @order.name %></td>
				</tr>
				<tr>
					<td class="table-secondary">支払方法</td>
					<td><%= @order.pay_type_i18n %></td>
				</tr>
				<tr>
					<td class="table-secondary">ステータス</td>
					<td><%= @order.order_status %></td>
				</tr>
			</table>

			<p>注文内容</p>
				<table class="table table-bordered">
					<tr class="table-secondary" >
						<th>商品</th>
						<th>単価（税込み)</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
					<% @ordered_items.each do |order_item| %>
					<tr>
						<td><%= order_item.item.item_name %></td>
						<td><%= order_item.items_tax_included_price %></td>
						<td><%= order_item.number_of_items %></td>
						<td><%= (order_item.items_tax_included_price*order_item.number_of_items) %>
							<% @total += (order_item.items_tax_included_price*order_item.number_of_items) %>
						</td>
					</tr>
					<% end %>
				</table>
			</div>
			<div class="col-3">
				<div class="row">
				  <table class="table table-bordered border-dark">
				    <br><p>請求情報</p>
					<tr>
						<td class="table-secondary">商品合計</td>
						<th><%= @total %></th>
					</tr>
					<tr>
						<td class="table-secondary">送料</td>
						<th>800</th>
					</tr>
					<tr>
						<td class="table-secondary">ご請求額</td>
						<th><%= @total + 800 %></th>
					</tr>
				  </table>
		        </div>
		</div>
	</div>
</div>
