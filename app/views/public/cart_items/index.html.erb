<div class="container mt-5">
  <div class="row">
    <div class="col-10 mb-3">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-2">
      <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, data: {confirm: '本当にカートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered table-hover">
      <thead class="thead-light ">
        <tr>
          <th class="col-4">商品名</th>
          <th class="col-2 text-center">単価（税込)</th>
          <th class="col-2 text-center">数量</th>
          <th class="col-2 text-center">小計</th>
          <th class="col-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="align-middle"><%= cart_item.item.name %></td>
          <td class="pr-5 text-right align-middle"><%= (cart_item.item.price * 1.1).floor.to_s(:delimited) %></td>


            <td class="text-center align-middle">
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %><!--数量変更-->
              <%= f.select :quantity, *[1..10] %>
              <%= f.submit "変更",class:"btn btn-success" %>
              <% end %>
            </td>

          <td class="pr-5 text-right align-middle"><%= (cart_item.item.price*cart_item.quantity*1.1).floor.to_s(:delimited) %></td>
          <td class="text-center align-middle"><%= link_to "削除する",  cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-8"></div>
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <th class="alert alert-dark text-right">合計金額</th>
          <td class="text-right pr-4"><%= @total.round.to_s(:delimited)%></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
  </div>

  <div class="row mt-5">
    <div class="col-4"></div>
    <div class="col-4">
      <% if @cart_items.count == 0  %><!--商品０なら進まない-->
        <%= link_to "情報入力に進む", cart_items_path, class: "btn btn-success w-50 font-weight-bold",style: "font-size:1.2em;" %>
      <% else %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success w-75 font-weight-bold",style: "font-size:1.2em;" %>
      <% end %>
    </div>
    <div class="col-4"></div>
  </div>
  <%= paginate @cart_items%>
</div>