<div class="container">
 <div class="row">

　<h5 class=" col-sm-2 col-lg-2.5 m-5 text-center", style="background-color:#e0e0e0">
  配送先編集</h5>

<div class="container">
 <div class="row">

<table class="table table-borderless " >
	     <%= form_with model: @address do |f| %>
		<tr>
			<th scope="col" style="width: 20%">郵便番号(ハイフンなし)</th>
			<td><%= f.text_field :post_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= f.text_field :address , size: 50 %></td>
		</tr>
		<tr>
			<th>宛名</th>
			<td><%= f.text_field :name %>
　 　<%= f.submit '変更内容を保存' , class: 'ml-6 btn btn-success w-20' %></td>
		</tr>
　　　　　<%end%>
　　</table>


　　</div>
