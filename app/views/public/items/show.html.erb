<div class="container mt-5">

  <div class="row">
    <div class="col-5 mt-3">
      <%= image_tag @item.image, size: "380x300" %>
    </div>

    <div class="col-7 mt-5">
      <div class="font-weight-bold mb-3"style="font-size:2em;">
        <%= @item.name%>
      </div>
      <div style="font-size:1.5em;">
        <%= @item.introduction %>
      </div>
      <br>
      <br>
      <div class="font-weight-bold" style="font-size:1.5em;">
        ￥<%= (@item.price*1.1).floor.to_s(:delimited) %>(税込)
      </div>

      <div class="ml-5 mt-4">
      <%= form_with model: @cart_item do |f| %>
          <% if customer_signed_in? && @item.is_active == true %>
        <%= f.select :quantity, *[1..10] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit 'カートに入れる',class:"btn btn-success ml-3"%>
          <% end %>
      <% end %>
      </div>

    </div>
  </div>
</div>